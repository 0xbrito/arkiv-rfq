{
  "name": "@arkiv-rfq/sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for Arkiv RFQ Platform - Handles RFQ CRUD operations and real-time event streaming",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "arkiv",
    "rfq",
    "defi",
    "cross-chain",
    "trading"
  ],
  "dependencies": {
    "ethers": "^6.13.4"
  },
  "devDependencies": {
    "@types/node": "^20.17.9",
    "jsdom": "^25.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "@arkiv/sdk": "*"
  },
  "peerDependenciesMeta": {
    "@arkiv/sdk": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
